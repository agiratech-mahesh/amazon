pipeline { 
    agent any 
        stages { 
            stage ('checkout') { 
                steps { 
                     checkout scm
                }  
            }
            stage ('build') {
                steps {
                echo"build is complete"
                }
                 }
            stage ('test') {
            steps {
            echo"test is complete"
            }
            }
            stage ('cloning repository') {
            steps {
             sh " git config --global  user.name agiratech-mahesh
                  git config --global  user.email mahesh.m@agiratech.com
                  git clone https://github.com/agiratech-mahesh/amazon.git
                   }
                   }
            stage ('deploy') {
            steps {
            sh " cp -r /home/agira/amazon/index.html /var/www/amazon.com/public_html/index.html"
            }
            }
        }
    }
