pipeline {
   agent any
   stages {
   stage ('cloning repository') {
   steps {
   sh ("""
        git config --global  user.name agiratech-mahesh
        git config --global  user.email mahesh.m@agiratech.com
        git clone https://github.com/agiratech-mahesh/amazon.git
        """)
        }
        }
   stage ('copying file to localhost') {
   steps {
      sh "cd /var/lib/jenkins/amazon" }
      steps{ 
      sh" cp . /var/lib/jenkins/amazon/index.html /var/www/amazon.com/public_html/"
      }
      }
      }
      }
      }
